{
  "name": "dtxdownload",
  "version": "1.0.0",
  "description": "Download tool for DTXMania charts",
  "main": "dist/index.js",
  "bin": {
    "dtx-download": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/approveddtx.js",
    "gui": "npm run build && node dist/api/simple-server.js",
    "gui:dev": "tsc && concurrently \"tsc --watch\" \"nodemon dist/api/simple-server.js\"",
    "test": "jest",
    "test:unit": "jest --testPathPattern=src",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "test:e2e:scraping": "jest tests/e2e/database-scraping.e2e.test.ts",
    "test:e2e:download": "jest tests/e2e/download-unzip.e2e.test.ts",
    "test:e2e:full": "jest tests/e2e/full-workflow.e2e.test.ts",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf dist",
    "dtx": "npm run build && node dist/cli.js",
    "dtx:scrape": "npm run build && node dist/cli.js scrape approved-dtx",
    "dtx:stats": "npm run build && node dist/cli.js stats",
    "dtx:search": "npm run build && node dist/cli.js search",
    "dtx:download": "npm run build && node dist/cli.js download",
    "dtx:help": "npm run build && node dist/cli.js --help"
  },
  "author": "Tushar Rangaswamy",
  "license": "ISC",
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/extract-zip": "^2.0.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.19.9",
    "@types/request": "^2.48.12",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "concurrently": "^9.2.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node-fetch": "^2.6.13",
    "better-sqlite3": "^12.2.0",
    "cheerio": "^1.0.0-rc.12",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "extract-zip": "^2.0.1",
    "node-fetch": "^2.7.0",
    "playwright": "^1.54.2",
    "request": "^2.88.2"
  }
}
